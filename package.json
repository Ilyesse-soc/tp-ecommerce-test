{
  "name": "tp-ecommerce-tests",
  "version": "1.0.0",
  "description": "Application d'e-commerce avec tests unitaires et fonctionnels en Node.js",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "node tests/testEcommerce.js",
    "test:coverage": "nyc --reporter=lcov --reporter=text node tests/testEcommerce.js",
    "test:smoke": "node tests/smokeTest.js",
    "test:production": "node tests/productionTest.js",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "build": "npm run lint && npm test",
    "build:prod": "NODE_ENV=production npm run build",
    "dev": "nodemon index.js",
    "precommit": "npm run lint && npm test",
    "prepare": "npm run build"
  },
  "keywords": ["ecommerce", "tests", "nodejs", "ci-cd", "github-actions"],
  "author": "DÃ©veloppeur Senior",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "nyc": "^15.1.0",
    "nodemon": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ilyesse-soc/tp-ecommerce-test.git"
  },
  "bugs": {
    "url": "https://github.com/Ilyesse-soc/tp-ecommerce-test/issues"
